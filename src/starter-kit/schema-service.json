{
    "$schema":"http://json-schema.org/schema",
    "id":"ComponentSchematics",
    "title": "Service Options Schema",
    "type": "object",
    "description": "the option of service",
    "properties": {
        "name":{
            "type":"string",
            "description": "the name of service",
            "$default":{
                "$source":"argv",
                "index": 0
            },
            "x-prompt": "choose service name :"
        },
        "dataName":{
            "type":"string",
            "description": "the data name for service",
            "$default":{
                "$source":"argv",
                "index": 0
            },
            "x-prompt": "choose service data name :"
        },
        "dataType":{
            "type":"string",
            "description": "the shared data type",
            "enum": [
                "string",
                "boolean",
                "any"
              ],
            "$default":{
                "$source":"argv",
                "index": 0
            },
            "x-prompt": {
                "message":"choose data type :",
                "type": "list",
                "items": [
                { "value": "string",  "label": "string" },
                { "value": "boolean", "label": "boolean" },
                { "value": "any", "label": "any" }
                ]
            }
        }, 
        "project": {
            "type": "string",
            "description": "The name of the project.",
            "$default": {
              "$source": "projectName"
            }
        },
        "path":{
            "type":"string",
            "default": "src/app",
            "description": "the path for component",
            "$default":{
                "$source":"argv",
                "index": 0
            },
            "x-prompt": "choose path to create component :"
        },
        "module":{
            "type":"string",
            "default": "src/app/app.module.ts",
            "description": "module path for component declaration",
            "$default":{
                "$source":"argv",
                "index": 0
            },
            "x-prompt": "choose module path for component declaration :"
        },
        "withService": {
            "type": "boolean",
            "default": true,
            "description": "create associate service default true",
            "$default":{
                "$source":"argv",
                "index": 0
            }
        },
        "withModule": {
            "type": "boolean",
            "default": false,
            "description": "create associate module default false",
            "$default":{
                "$source":"argv",
                "index": 0
            }
        }

    },
    "required": ["name"]

}